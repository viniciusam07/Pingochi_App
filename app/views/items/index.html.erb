<div class="container">
  <h1>Welcome to Pingochi <%= @pingochi.name %> Wagon Market</h1>
  <p><%= "We have #{@items.count} for sale!" %></p>
</div>

<div class="container">
  <div class = "cards">
    <% @items.each do |item| %>
      <div class="card-category nes-container is-rounded">
        <div>
          <p>Item Name:<%= item.name %></p>
          <p>Description:<%= item.description %></p>
          <p>NFT:<%= item.nft %></p>
          <p>Price:<%= "#{item.value} fishcoins" %></p>
          <p>Category:<%= item.category.name %></p>
          <%= simple_form_for [@pingochi, @inventory] do |f| %>
            <%= f.hidden_field :item_id, value: item.id %>
            <%= f.submit 'Buy', class: "nes-btn is-error" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
