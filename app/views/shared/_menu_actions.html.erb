<div class="nes-container is-centered" style="background-color: #39A9DB">

    <button id="sweet-alert-slap" class="nes-btn is-warning w-100">Slap</button>
    <%=link_to "", pingochi_slap_path(@pingochi), method: :patch, id: "slap-action", class: "hidden" %>

    <button id="sweet-alert-feed" class="nes-btn is-warning w-100">Feed</button>
    <%=link_to "", pingochi_feed_path(@pingochi), method: :patch, id: "feed-action", class: "hidden"%>

    <button id="sweet-alert-sleep" class="nes-btn is-warning w-100">Sleep</button>
    <%=link_to "", pingochi_sleep_path(@pingochi), method: :patch, id: "sleep-action", class: "hidden"%>

    <button id="sweet-alert-fish" class="nes-btn is-warning w-100">Fish</button>
    <%=link_to "", pingochi_fish_path(@pingochi), method: :patch, id: "fish-action", class: "hidden"%>

    <%= link_to "PvP", pingochi_opponents_path(@pingochi), class: "nes-btn is-warning w-100" %>

    <%= link_to "Mating", pingochi_couples_path(@pingochi), class: "nes-btn is-warning w-100" %>

    <%=link_to "Market", pingochi_items_path(@pingochi), class: "nes-btn is-warning w-100"%>

</div>
