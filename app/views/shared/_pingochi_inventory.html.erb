<div class="nes-container with-title">
  <p class="title">Inventory</p>
  <div class="lists">
    <div class="nes-list is-disc">
      <% @pingochi.inventories.each do |inventory| %>
        <div class="d-flex mb-2" >
          <div class="mr-3">
            <%= image_tag("items/#{inventory.item.image_url }", class: 'image', size: "50x50") %>
          </div>
          <div>
            <%= inventory.item.name %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
